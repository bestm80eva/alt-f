#! /bin/sh

DESC="Daemon to execute scheduled commands"
NAME=crond
TYPE=sys
REQUIREDBY="backup ntp cleanup"

. $(dirname $0)/common 

sinit() {
	if ! test -e /var/spool/cron/crontabs; then
		mkdir -p /var/spool/cron/crontabs
	fi
	if ! test -e /var/spool/cron/crontabs/root; then
		touch /var/spool/cron/crontabs/root
	fi
}

case "$1" in
	start) sinit; start $NAME ;;
	stop) stop $NAME ;;
	status)	status $NAME ;;
	restart) restart $NAME ;;
	init) sinit ;;
	*) usage $0 "start|stop|status|restart|init" ;;
esac
