config BR2_PACKAGE_NTFSPROGS
	bool "ntfsprogs"
	depends on BR2_USE_WCHAR
	help
	  wide collection of NTFS utilities. ntfsmount needs libfuse

	  http://www.linux-ntfs.org/

config BR2_PACKAGE_NTFSPROGS_NTFSMOUNT
	bool "ntfsmount"
	depends on BR2_PACKAGE_NTFSPROGS
	select BR2_PACKAGE_LIBFUSE
	help
	  Mounts a ntfs partition. See also the ntfs-3g package
	  
comment "ntfsprogs requires a toolchain with WCHAR support"
	depends on !BR2_USE_WCHAR
